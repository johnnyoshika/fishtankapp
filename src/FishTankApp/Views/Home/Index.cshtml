@model FishTankApp.ViewModels.DashboardViewModel

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Dashboard</h1>
        </div>
    </div>
    <div class="row">
        @Html.DisplayFor(m => m.WaterTemperatureTile)
        @Html.DisplayFor(m => m.FishMotionTile)
        @Html.DisplayFor(m => m.WaterOpacityTile)
        @Html.DisplayFor(m => m.LightIntensityTile)
    </div>
    <div class="row">
        <div class="col-lg-6 col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-6">
                            <label asp-for="FoodAmount"></label>
                            <span class="small">
                                <label asp-for="LastFed"></label>
                                @Model.LastFed
                            </span>
                        </div>
                        <form asp-controller="Home" asp-action="Feed" method="post">
                            <div class="col-xs-3">
                                <input type="number" class="form-control input-lg" asp-for="FoodAmount" />
                            </div>
                            <div class="col-xs-3">
                                <span class="center">
                                    <button class="btn btn-primary input-lg" type="submit" style="width:100%;">
                                        Feed!
                                    </button>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        @Component.Invoke("Alert")
    </div>
</div>